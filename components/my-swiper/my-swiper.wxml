<!--components/my-swiper/my-swiper.wxml-->
<swiper class="swiper"
        autoplay
        circular
        indicator-dots
        indicator-active-color="#ff5777"
        interval="3000">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>
