/* components/my-goods-item/my-goods-item.wxss */
.goods-item {
  /* width: 200rpx; */
  text-align: center;
  color: #333;
  padding-bottom: 100rpx;
}

image {
  width: 100%;
  border-radius: 10rpx;
}

.desc-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -14rpx;
}

.title {
  /* 
  显示一行，其余隐藏
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  font-size: 28rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info {
  font-size: 26rpx;
}

.info .price {
  color: #ff5777;
}

.info .icon {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  padding: 0 6rpx 0 10rpx;
  top: 6rpx;
}